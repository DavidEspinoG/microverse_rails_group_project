<%= render partial: 'shared/menu' %>

<h2 class="text-center">Add new ingredient to <%= @recipe.name %></h2>
<div class="container" style="max-width: 500px;">
  <%= form_with url: create_ingredient_path(@recipe), method: :post do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :quantity, class: 'form-label'%>
      <%= form.number_field :quantity, class: 'form-control'%>
    </div>
    <div class="mb-3">
      <%= form.label :price, class: 'form-label'%>
      <%= form.number_field :price, class: 'form-control'%>
    </div>
    
    
    <%= form.hidden_field :recipe_id, value: @recipe.id %>
    <%= form.submit class: 'btn btn-primary' %>
  <% end %>
</div>
