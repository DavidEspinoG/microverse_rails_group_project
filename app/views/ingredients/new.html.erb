<h2>Add new ingredient to <%= @recipe.name %></h2>

<%= form_with url: create_ingredient_path(@recipe), method: :post do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :quantity%>
  <%= form.number_field :quantity%>
  <%= form.label :price%>
  <%= form.number_field :price%>
  <%= form.hidden_field :recipe_id, value: @recipe.id %>
  <%= form.submit %>
<% end %>